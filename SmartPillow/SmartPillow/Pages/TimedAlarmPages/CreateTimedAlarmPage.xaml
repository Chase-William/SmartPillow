<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:vm="clr-namespace:SmartPillowLib.ViewModels.TimedAlarmVMs;assembly=SmartPillowLib"
             xmlns:alarm_prop="clr-namespace:SmartPillow.Pages.TimedAlarmPages" xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             mc:Ignorable="d"             
             x:Class="SmartPillow.Pages.TimedAlarmPages.CreateTimedAlarmPage"
             Title="New Alarm">

    <ContentPage.BindingContext>
        <vm:CreateTimedAlarmVM x:Name="viewModel"/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- TextEntry styles -->
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <!-- Horizontal break fitted to the grids used in this page -->
            <Style TargetType="BoxView" BasedOn="{StaticResource HorizontalBreak}">
                <Setter Property="Grid.Row" Value="3"/>
                <Setter Property="Grid.ColumnSpan" Value="2"/>
            </Style>
            <!-- Adjusting the base PropertyGroup Grid Style -->
            <Style TargetType="Grid">
                <Setter Property="HeightRequest" Value="90"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"
                     Priority="0"
                     Order="Primary"
                     IconImageSource="check_mark"
                     Command="{Binding SaveAlarmCMD}"/>
    </ContentPage.ToolbarItems>

    <Grid>

        <skia:SKCanvasView x:Name="SKCanvas" PaintSurface="SKCanvas_PaintSurface"/>
        <Image Style="{StaticResource CloudyBG}"/>
        <Frame Style="{StaticResource RoundedTranslucentFrame}">
            <ScrollView>

                <StackLayout Style="{StaticResource NestedWithinFrame}">
                <Label Text="Time" FontSize="20" TextColor="{StaticResource GrayedFont}"/>
                <TimePicker Format="T" TextColor="{StaticResource LightFont}"/>
                <Entry Placeholder="Alarm name..." PlaceholderColor="{StaticResource GrayedFont}" TextColor="{StaticResource LightFont}"/>


                <!-- Pillow -->
                <ContentView>
                    <ContentView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AdjustPillowSettingsCMD}"/>
                    </ContentView.GestureRecognizers>

                    <ContentView.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.7*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.1*"/>
                                </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Prop Title -->
                            <Label Style="{StaticResource PropertyLabel}" Text="Pillow"/>
                            <!-- Prop Value Text -->
                            <Label Style="{StaticResource PropValueLabel}" Text="Vibration Only"/>
                            <!-- Prop Modifier, Will need to be iterated when saving because bindings dont support parameters for path variable -->
                            <Switch IsToggled="{Binding NewAlarm.PillowProps.IsEnabled}"/>

                            <BoxView/>
                        </Grid>
                    </ContentView.Content>
                </ContentView>
                 
                <!-- Phone -->
                <ContentView>
                    <ContentView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AdjustPillowSettingsCMD}"/>
                    </ContentView.GestureRecognizers>

                    <ContentView.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.7*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                                <!-- Prop Title -->
                            <Label Style="{StaticResource PropertyLabel}" Text="Phone"/>
                            <!-- Prop Value Text -->
                            <Label Style="{StaticResource PropValueLabel}"/>
                            <!-- Prop Modifier, Will need to be iterated when saving because bindings dont support parameters for path variable -->
                            <Switch IsToggled="{Binding NewAlarm.PhoneProps.IsEnabled}"/>

                            <BoxView/>
                        </Grid>
                    </ContentView.Content>
                </ContentView>
                                        
                <!-- Snooze -->
                <ContentView>
                    <ContentView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AdjustPillowSettingsCMD}"/>
                    </ContentView.GestureRecognizers>

                    <ContentView.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.7*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                                <!-- Prop Title -->
                            <Label Style="{StaticResource PropertyLabel}" Text="Snooze"/>
                            <!-- Prop Value Text -->
                            <Label Style="{StaticResource PropValueLabel}"/>
                            <!-- Prop Modifier, Will need to be iterated when saving because bindings dont support parameters for path variable -->
                            <Switch IsToggled="{Binding NewAlarm.PhoneProps.IsEnabled}"/>

                            <BoxView/>
                        </Grid>
                    </ContentView.Content>
                </ContentView>
                    
                <!-- Fade -->
                <ContentView>
                    <ContentView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AdjustPillowSettingsCMD}"/>
                    </ContentView.GestureRecognizers>

                    <ContentView.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.7*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                                <!-- Prop Title -->
                            <Label Style="{StaticResource PropertyLabel}" Text="Fade"/>
                            <!-- Prop Value Text -->
                            <Label Style="{StaticResource PropValueLabel}"/>
                            <!-- Prop Modifier, Will need to be iterated when saving because bindings dont support parameters for path variable -->
                            <Switch IsToggled="{Binding NewAlarm.PhoneProps.IsEnabled}"/>
                        </Grid>
                    </ContentView.Content>
                </ContentView>
                    
                <!-- Alarm Notes -->
                <Entry Placeholder="Notes..." TextColor="{StaticResource LightFont}" PlaceholderColor="{StaticResource GrayedFont}"/>

                <!-- Cancel / Save Layout -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Style="{StaticResource MinimalisticBtn}" Text="Cancel" Clicked="OnCancel_BtnClicked"/>
                    <Button Style="{StaticResource MinimalisticBtn}" Text="Save" Grid.Column="2" Command="{Binding SaveAlarmCMD}"/>
                </Grid>
            </StackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentPage>